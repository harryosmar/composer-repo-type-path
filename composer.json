{
  "name": "hs040x/composer-parent",
  "authors": [
    {
      "name": "hs040x",
      "email": "hsitohang@wayfair.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "path",
      "url": "./packages/*",
      "options": {
        "symlink": false
      }
    }
  ],
  "require": {
    "phpunit/phpunit": "~5.7",
    "hs040x/dummy1": "dev-master",
    "hs040x/dummy2": "dev-master",
    "hs040x/includes": "dev-master"
  },
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml --debug"
  }
}
